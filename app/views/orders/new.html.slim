.row
  = simple_form_for @order, 
      html: {class: 'form-horizontal col-md-8 col-md-offset-2'},
      wrapper: :horizontal_form do |f|
    .panel.panel-info
      .panel-heading= t '.headers.address'
      .panel-body
        = f.input :name
        = f.input :tel
        = f.input :zipcode
        = f.input :address

    .panel.panel-info
      .panel-heading= t '.headers.delivery'
      .panel-body
        = f.input :delivery_day, as: :string, required: true, input_html: { class: 'date_picker', data: {minDays: @order.min_day - Date.today, maxDays: @order.max_day - Date.today}}
        = f.input :delivery_time, as: :select

    .panel.panel-info
      .panel-heading= t '.headers.other'
      .panel-body
        = f.input :postage, input_html: { disabled: true, value: @order.postage(current_cart.items) }
        = f.input :fee, input_html: { disabled: true, value: @order.fee(current_cart.items) }

    = f.submit t('.create'), class: 'btn btn-primary'
